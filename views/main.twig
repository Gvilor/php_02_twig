{% extends "__layout.twig" %}
{% import "macros.twig" as buttons %}
{% block content %}

	<div class="row d-flex">

		{% for object in way %}

			<div class="col mb-4 d-flex algin-items-scretch">

				<div class="border p-2 d-flex flex-column justify-content-between position-relative">

					<div class="position-absolute" style="right: 4px; top: 4px">

						<form action="/way/delete" method="POST">

							<input type="hidden" name="id" value="{{object.id}}">
							<button type="submit" class="btn btn-danger">
								<i class="fa-solid fa-circle-xmark"></i>
							</button>

						</form>


					</div>

					<div class="position-absolute" style="left: 4px; top: 4px">

						<form action="/way/{{object.id}}/edit" method="GET">

							<input type="hidden" name="id" value="{{object.id}}">
							<button type="submit" class="btn btn-success">
								<i class="fa-solid fa-rotate-right"></i>
							</button>

						</form>


					</div>

					<div class="img-thumbnail mb-2" style="width: 100%; height:320px; overflow:hidden">

						<img src="{{object.image}}" alt="" style="height: 320px; width: 480px; object-fit: cover">

					</div>

					<div class="d-flex flex-column">

						<div
							class="btn">
							{# Основная кнопка #}
							{{ buttons.btn(object.title, '/way/' ~ object.id, true, "warning") }}
						</div>

						<div class="d-flex justify-content-center">

							<div
								class="btn-group">
								{# Кнопка для информации #}
								{{ buttons.btn("Описание", '/way/' ~ object.id ~ '?show=info', true, "primary") }}

								{# Кнопка для изображения #}
								{{ buttons.btn("Картинка", '/way/' ~ object.id ~ '?show=image', true, "primary") }}
							</div>

						</div>


					</div>


				</div>


			</div>


		{% endfor %}

	</div>


{% endblock %}
